
@{
    ViewBag.Title = "View";



}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta API</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <form class="container">
            <h3>Anúncios WebMotors</h3>
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Ano</th>
                            <th>Versão</th>
                            <th>Quilometragem</th>
                            <th>Observacao</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Anuncios)
                        {
                            <tr>
                                <td>@item.Make</td>
                                <td>@item.Model</td>
                                <td>@item.YearModel</td>
                                <td>@item.Version</td>
                                <td>@item.KM</td>
                                <td>@item.Obs</td>
                                <td>
                                    <a class="btn btn-primary btn-alterar" role="button" onclick="EditarAnuncio((@item.ID)"><i class="glyphicon glyphicon-ok"></i></a>
                                    <a class="btn btn-danger btn-excluir" role="button"onclick="RemoverAnuncio(@item.ID)"><i class="glyphicon glyphicon-remove"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="container">
                    <p> Para Editar selecione os novos dados abaixo e clique no botão azul do anuncio que deve ser Editado</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Marca</label><br />
                        <select id="marca" class="form-control">
                            <option>Selecione a Marca...</option>
                        </select><br /><br />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Modelo</label><br />
                        <select id="modelo" class="form-control">
                            <option>Selecione a Modelo...</option>
                        </select><br /><br />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Versao</label><br />
                        <select id="versao" class="form-control">
                            <option>Selecione a Versão...</option>
                        </select><br /><br />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Ano</label><br />
                        <input type="text" id="ano" placeholder="Ano" class="form-control" /><br /><br />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Quilometragem</label><br />
                        <input type="text" id="km" placeholder="Quilometragem" class="form-control" /><br /><br />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Obrservação</label><br />
                        <input type="text" id="obs" placeholder="Obrservação" class="form-control" /><br /><br />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <button type="button" id="btnIncluir" class="btn-primary" onclick="InserirAnuncio()">Incluir</button>
                        <button type="button" id="btnCancelar" class="btn-danger" >Cancelar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="~/Scripts/main.js"></script>
</body>
</html>


